<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--六宫格-->

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="79dp"
        android:layout_height="68dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="51dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="79dp"
        android:layout_height="68dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="51dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="79dp"
        android:layout_height="68dp"
        android:layout_marginTop="125dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="@id/iv1"
        app:layout_constraintTop_toBottomOf="@id/iv1" />

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="79dp"
        android:layout_height="68dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintRight_toRightOf="@id/iv2"
        app:layout_constraintTop_toTopOf="@id/iv3" />

    <ImageView
        android:id="@+id/iv5"
        android:layout_width="79dp"
        android:layout_height="68dp"
        android:layout_marginTop="125dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="@id/iv1"
        app:layout_constraintTop_toBottomOf="@id/iv3" />

    <ImageView
        android:id="@+id/iv6"
        android:layout_width="79dp"
        android:layout_height="68dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintRight_toRightOf="@id/iv2"
        app:layout_constraintTop_toTopOf="@id/iv5" />

    <!--竖线-->

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!--横线-->

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66" />

</androidx.constraintlayout.ConstraintLayout>