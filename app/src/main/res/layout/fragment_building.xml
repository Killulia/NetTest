<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.BuildingFragment">

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/rv_unit"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:orientation="horizontal"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="20dp"

       />

   <androidx.constraintlayout.helper.widget.Flow
       android:id="@+id/flow"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:layout_marginTop="20dp"
       android:background="#F3F4F6"
       android:orientation="horizontal"
       android:padding="10dp"
       app:constraint_referenced_ids="iv_rc1,tv_rc1,iv_rc2,tv_rc2,iv_rc3,tv_rc3,iv_rc4,tv_rc4
,iv_cr1,tv_cr1,iv_cr2,tv_cr2,iv_cr3,tv_cr3"
       app:flow_maxElementsWrap="8"
       app:flow_verticalGap="8dp"
       app:flow_wrapMode="aligned"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/rv_unit"
       app:layout_constraintVertical_bias="0.0" >

   </androidx.constraintlayout.helper.widget.Flow>

   <ImageView
      android:id="@+id/iv_rc1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/level_unit"
       />
   <TextView
       android:id="@+id/tv_rc1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="出租房屋"
       android:textSize="@dimen/sp_14"
       />
   <ImageView
       android:id="@+id/iv_rc2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/level_unit"
       />
   <TextView
       android:id="@+id/tv_rc2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="非出租房屋"
       android:textSize="@dimen/sp_14"
       />
   <ImageView
       android:id="@+id/iv_rc3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/level_unit"
       />
   <TextView
       android:id="@+id/tv_rc3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="待核实房屋"
       android:textSize="@dimen/sp_14"
       />
   <ImageView
       android:id="@+id/iv_rc4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/level_unit"
       />
   <TextView
       android:id="@+id/tv_rc4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="其他服务站房屋"
       android:textSize="@dimen/sp_14"
       />

   <ImageView
       android:id="@+id/iv_cr1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/level_unit"
       />
   <TextView
       android:id="@+id/tv_cr1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="一般严管类"
       android:textSize="@dimen/sp_14"
       />
   <ImageView
       android:id="@+id/iv_cr2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/level_unit"
       />
   <TextView
       android:id="@+id/tv_cr2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="严管严控类"
       android:textSize="@dimen/sp_14"
       />
   <ImageView
       android:id="@+id/iv_cr3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/level_unit"
       />
   <TextView
       android:id="@+id/tv_cr3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="严管禁止类"
       android:textSize="@dimen/sp_14"
       />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="#FF333333"
       android:textSize="@dimen/sp_16"
       android:text="排序方式"
       android:visibility="gone"
       />

   <TextView
       android:layout_width="70dp"
       android:layout_height="27dp"
       android:drawableLeft="@mipmap/zhengxu"
       android:gravity="center"
       android:paddingLeft="@dimen/dp_10"
       android:text="正序"
       android:textSize="@dimen/sp_12"
       app:layout_constraintTop_toBottomOf="@id/flow"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="30dp"
       />
</androidx.constraintlayout.widget.ConstraintLayout>