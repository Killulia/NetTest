<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/bg1"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        >
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QWERTY"
            android:textSize="22sp"
            android:textColor="@color/gztx_white"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/text_color"
            />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:text="ASSDFASSDFASSDFASSDsdfsdffsdfsdfsdfsfsdfsdfASSDFASSDFASSDFASSDsdfsdffsdfsdfsdfsfsdfsdfASSDFASSDFASSDFASSDsdfsdffsdfsdfsdfsfsdfsdfF"
            android:textColor="@color/gztx_white"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            app:layout_constraintStart_toStartOf="@id/tv1"
            app:layout_constraintHorizontal_bias="0"
            android:layout_alignTop="@id/tv3"
            android:layout_alignLeft="@id/tv1"
            android:background="@color/colorAccent"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ASSDF"
            android:textColor="@color/gztx_white"
            android:textSize="22sp"
            android:layout_marginStart="30dp"
            android:background="@color/gztx_blue"
            android:layout_below="@id/tv1"
            />
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>