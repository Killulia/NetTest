<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_253"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/bg"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/area_platform"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toBottomOf="@id/iv_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_24"
        android:textColor="#00CC99"
        />


    <ImageView
        android:id="@+id/iv_sgt"
        android:layout_width="@dimen/dp_153"
        android:layout_height="@dimen/dp_38"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tittle"
        android:layout_marginTop="@dimen/dp_18"
        android:src="@drawable/sgt"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/tv_zhanghao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_username"
        app:layout_constraintTop_toTopOf="@id/iv_username"
        app:layout_constraintBottom_toBottomOf="@id/iv_username"
        android:layout_marginLeft="@dimen/dp_8"
        android:textSize="@dimen/sp_16"
        android:textColor="#00CC99"
        android:text="账号"
        />

    <ImageView
        android:id="@+id/iv_username"
        android:layout_width="@dimen/dp_33"
        android:layout_height="@dimen/dp_33"
        android:src="@drawable/zhanghao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bg"
        android:layout_marginTop="@dimen/dp_144"
        android:layout_marginLeft="@dimen/dp_50"
        />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_50"
        android:textSize="@dimen/sp_16"
        android:textColor="#343333"
        app:layout_constraintLeft_toRightOf="@id/tv_zhanghao"
        app:layout_constraintTop_toTopOf="@id/tv_zhanghao"
        app:layout_constraintBottom_toBottomOf="@id/tv_zhanghao"
        android:layout_marginLeft="@dimen/dp_8"
        android:background="@null"
        />

    <View
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#C5C5C5"
        app:layout_constraintLeft_toLeftOf="@id/iv_username"
        app:layout_constraintTop_toBottomOf="@id/et_username"
        app:layout_constraintRight_toRightOf="@id/et_username"
        android:layout_marginRight="@dimen/dp_50"
        />

    <ImageView
        android:id="@+id/iv_pwd"
        android:layout_width="@dimen/dp_33"
        android:layout_height="@dimen/dp_33"
        android:src="@drawable/mima"
        app:layout_constraintLeft_toLeftOf="@id/iv_username"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="@dimen/dp_30"
        />

    <TextView
        android:id="@+id/tv_mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_pwd"
        app:layout_constraintTop_toTopOf="@id/iv_pwd"
        app:layout_constraintBottom_toBottomOf="@id/iv_pwd"
        android:layout_marginLeft="@dimen/dp_8"
        android:textSize="@dimen/sp_16"
        android:textColor="#00CC99"
        android:text="密码"
        />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_50"
        android:textSize="@dimen/sp_16"
        android:textColor="#343333"
        app:layout_constraintLeft_toRightOf="@id/tv_mima"
        app:layout_constraintTop_toTopOf="@id/tv_mima"
        app:layout_constraintBottom_toBottomOf="@id/tv_mima"
        android:layout_marginLeft="@dimen/dp_8"
        android:background="@null"
        />

    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#C5C5C5"
        app:layout_constraintLeft_toLeftOf="@id/iv_pwd"
        app:layout_constraintTop_toBottomOf="@id/et_pwd"
        app:layout_constraintRight_toRightOf="@id/et_pwd"
        android:layout_marginRight="@dimen/dp_50"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/button_shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_58"
        android:layout_marginHorizontal="@dimen/dp_50"
        />

</androidx.constraintlayout.widget.ConstraintLayout>